{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node", // ✅ 必须是 node
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".", // 可选，用于路径别名
    "paths": {
      "@/*": ["src/*"] // 可选，配合 vite/webpack alias
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "shims-vue.d.ts",
    "src/utils/alg.js"
  ]
}
